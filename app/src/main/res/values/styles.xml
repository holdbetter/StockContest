<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">
            @color/colorPrimary
        </item>
        <item name="colorPrimaryDark">
            @color/colorPrimaryDark
        </item>
        <item name="colorAccent">
            @color/colorAccent
        </item>

        <item name="listPreferredItemHeight">
            68dp
        </item>

        <item name="colorSecondary">
            @color/colorPrimaryDark
        </item>

        <item name="fontFamily">
            @font/montserrat
        </item>

        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="listPrimaryTextSize">18sp</item>
        <item name="fontHeaders1">@font/montserrat_bold</item>
        <item name="listSecondaryTextSize">12sp</item>
        <item name="fontHeaders2">@font/montserrat_semi_bold</item>
        <item name="listSpaceBetweenItems">8dp</item>
        <item name="imageCornerRadius">12dp</item>
    </style>

    <style name="TextViewPrimary">
        <item name="android:textSize">?listPrimaryTextSize</item>
        <item name="fontFamily">?attr/fontHeaders1</item>
        <item name="lineHeight">24dp</item>
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="TextViewSecondary">
        <item name="android:textSize">?listSecondaryTextSize</item>
        <item name="fontFamily">?attr/fontHeaders2</item>
        <item name="lineHeight">16dp</item>
        <item name="android:textColor">?colorPrimaryDark</item>
    </style>
</resources>